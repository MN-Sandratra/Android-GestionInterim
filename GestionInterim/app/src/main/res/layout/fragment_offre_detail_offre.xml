<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/employeurTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_red_light" />

            <TextView
                android:id="@+id/intituleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/AdresseLabelTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adresse"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/villeTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/adresseTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <TextView
                android:id="@+id/dateLabelTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/dateDebutTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/dateFinTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/experienceLabelTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Experience"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/experienceTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/descriptionLabelTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/descriptionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tauxHoraireLabelTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Taux Horaire"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tauxHoraireTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/white" />


            <org.osmdroid.views.MapView
                android:id="@+id/map"
                android:layout_marginTop="@dimen/DefaultMargin"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                tilesource="Mapnik" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>
